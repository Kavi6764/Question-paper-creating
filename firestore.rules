rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // USER PROFILE
     function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'hod', 'dean'];
    }
    match /users/{userId} {
      allow read: if true;
      // Allow users to edit themselves OR Admins to edit anyone
      allow write: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }

    // UPLOAD HISTORY
    match /uploads/{uploadId} {
      allow create: if request.auth != null;

      allow read: if request.auth != null
      && request.auth.uid == resource.data.staffId;

      allow update, delete: if request.auth != null
      && request.auth.uid == resource.data.staffId;
    }

    // SUBJECTS
    match /subjects/{subjectId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }

    // ACTIVITY LOG (WRITE ONLY)
    match /activities/{activityId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow update, delete: if false;
    }

    // QUESTION PAPERS
    match /questionPapers/{paperId} {
      allow read: if resource.data.visible == true || isAdmin();
      // Only Admins/HODs/Deans can create or update papers (including auto-generation updates)
      allow write: if isAdmin();
    }
  }
}
